{
  "expo": {
    "name": "tell-me",
    "slug": "tell-me",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "location"
        ],
        "NSMotionUsageDescription": "La aplicación necesita acceder al acelerómetro para detectar el movimiento del dispositivo."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.WAKE_LOCK",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.angelcruz.tellme"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "be48c5ea-360b-4610-81c8-4e0844a2a2ff"
      }
    }
  }
}
